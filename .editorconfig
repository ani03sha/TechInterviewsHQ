# Top-most EditorConfig file
root = true

# Set the default charset
[*]
charset = utf-8

# Use spaces for indentation, with an indent size of 4 spaces
[*.{java,xml}]
indent_style = space
indent_size = 4

# Trim trailing whitespaces and ensure a single newline at the end of the file
trim_trailing_whitespace = true
insert_final_newline = true
